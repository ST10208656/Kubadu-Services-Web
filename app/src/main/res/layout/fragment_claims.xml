<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageViewClaim"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/claim" />

    <com.example.kubaduservices1.GradientTextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claims"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/deceasedNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deceased Name"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/relationStatusEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Relationship to Deceased"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/editTextClaimType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Claim Type"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Claim Amount"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Claim Description"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/attachButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Attach Death Certificate"
        android:background="@drawable/button_gradient"
        android:textColor="@color/white"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Submit Claim"
        android:background="@drawable/button_gradient"
        android:textColor="@color/white"
        android:enabled="false"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_gradient"
        android:text="Back to Home"
        android:textColor="@color/white"
        app:backgroundTint="@null" />
</LinearLayout>
