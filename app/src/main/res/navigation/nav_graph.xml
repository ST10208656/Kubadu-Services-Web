<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/loanFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.LoanFragment"
        android:label="Loan" />

    <fragment
        android:id="@+id/funeralPolicyFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.FuneralPolicyFragment"
        android:label="FuneralPolicy" />

    <fragment
        android:id="@+id/claimsFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.Claims"
        android:label="Claims" />

    <fragment
        android:id="@+id/ServicesRequestedFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.ServicesRequestedFragment"
        android:label="ServicesRequested" />

    <fragment
        android:id="@+id/ProfileFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/SettingsFragment"
        android:fontFamily="@font/montserrat_bold"
        android:name="com.example.kubaduservices1.SettingsFragment"
        android:label="Settings" />

    <action
        android:id="@+id/action_homeFragment_to_loanFragment"
        app:destination="@id/loanFragment" />

    <action
        android:id="@+id/action_homeFragment_to_funeralPolicyFragment"
        app:destination="@id/funeralPolicyFragment" />

    <action
        android:id="@+id/action_homeFragment_to_claimsFragment"
        app:destination="@id/claimsFragment" />

</navigation>
